<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.InvitationCodeActivity">


    <com.vondear.rxtools.view.cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        >

        <com.vondear.rxtools.view.RxTitle
            android:id="@+id/rxTitle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:elevation="1dp"
            android:translationZ="2dp"
            app:title="邀请码"
            app:titleColor="@color/line_333845"
            app:titleSize="16sp"/>


    </com.vondear.rxtools.view.cardview.CardView>


    <com.vondear.rxtools.view.cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_logo"/>


        <RelativeLayout
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp">


            <com.vondear.rxtools.view.layout.RxEditText
                android:id="@+id/edit_invitationCode"
                android:layout_width="265dp"
                android:layout_height="35dp"
                android:hint="请输入邀请码"
                android:maxLength="5"
                android:paddingLeft="10dp"
                android:textColor="@color/color_8E8E93"
                android:textSize="13sp"
                app:background_normal="@color/color_F5F5F5"
                app:corner_radius="10dp"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:alpha="0.6"
            android:background="@mipmap/ic_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="开始验证"
            android:textColor="@color/white"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="邀请码由商家提供，请正确输入有效邀请码"
            android:textColor="@color/font_475669"
            android:textSize="12sp"/>


    </com.vondear.rxtools.view.cardview.CardView>


</LinearLayout>