<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mine.SettingActivity">


    <com.vondear.rxtools.view.cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        >

        <com.vondear.rxtools.view.RxTitle
            android:id="@+id/rxTitle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            app:leftIcon="@drawable/ic_arrow_back_black_24dp"
            app:rightText="保存"
            app:rightTextColor="@color/color_444A59"
            app:rightTextSize="12sp"
            app:title="个人资料"
            app:titleColor="@color/line_333845"
            app:titleSize="16sp"/>

    </com.vondear.rxtools.view.cardview.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF7F7F9"
        android:orientation="vertical"
        >

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userImg"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:padding="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <com.vondear.rxtools.view.layout.RxImageView
                android:id="@+id/iv_userImg"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                app:is_circle="true"
                />

        </com.vondear.rxtools.view.layout.RxRelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_C3C5CA"/>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_C3C5CA"/>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userSex"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:alpha="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="女"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userBirth"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="生日"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_C3C5CA"/>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userHeight"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="身高"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_C3C5CA"/>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userWeight"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="目标体重"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userCity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所在城市"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_C3C5CA"/>

        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:id="@+id/layout_userSign"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:background_normal="@color/white"
            app:ripple_color="@color/ripple_ECEAE6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="签名"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_userSign"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/color_978E9D"
                android:textSize="13sp"/>


        </com.vondear.rxtools.view.layout.RxRelativeLayout>
    </LinearLayout>
</LinearLayout>