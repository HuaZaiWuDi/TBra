<?xml version="1.0" encoding="utf-8"?>
<com.vondear.rxtools.view.cardview.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardShadowColorEnd="#006A6F7B"
    app:cardShadowColorStart="#1A6A6F7B">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_warning"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_indeterminate_check_box_black_24dp"/>


        <TextView
            android:id="@+id/tv_phoneDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/img_warning"
            android:text="张三 18820922377"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@mipmap/ic_arrow_left_write"
            android:tint="#C2C4CA"
            />

        <com.vondear.rxtools.view.SwitchView
            android:id="@+id/switchView"
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:showText="true"
            app:hasShadow="true"
            app:isOpened="true"
            app:primaryColor="#00B4FF"
            app:primaryColorDark="#1A74FF"/>

    </RelativeLayout>


</com.vondear.rxtools.view.cardview.CardView>