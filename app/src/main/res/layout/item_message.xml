<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    >

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">


        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#978E9D"
            android:padding="8dp"
            android:src="@drawable/ic_delete_black_24dp"
            />


        <com.vondear.rxtools.view.layout.RxRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:corner_radius="4dp"
            >


            <com.vondear.rxtools.view.layout.RxImageView
                android:id="@+id/iv_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="8dp"
                app:is_circle="true"
                tools:src="@mipmap/ic_launcher"/>


            <com.vondear.rxtools.view.layout.RxImageView
                android:id="@+id/iv_redDot"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_alignLeft="@+id/iv_img"
                android:layout_alignTop="@+id/iv_img"
                app:icon_src_normal="@color/red"
                app:is_circle="true"
                />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_date"
                android:layout_toRightOf="@+id/iv_img"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="我是内容我是内容我是内容我是我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容"
                android:textColor="#574D5F"
                android:textSize="13sp"/>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#D9D8E1"
                android:textSize="11sp"
                tools:text="Timetofit\t\t\t3.6w 次阅读"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_img"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="我是内容我是内容我是内容我是我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容"
                android:textColor="#978E9D"
                android:textSize="13sp"/>

        </com.vondear.rxtools.view.layout.RxRelativeLayout>


    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>


