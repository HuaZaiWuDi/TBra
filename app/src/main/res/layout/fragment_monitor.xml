<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/ultraViewPager"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_margin="14dp"
            android:nestedScrollingEnabled="false"
            tools:background="@color/red">

        </com.tmall.ultraviewpager.UltraViewPager>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:text="设备名称"
            android:textColor="@color/font_475669"
            android:textSize="19sp"/>

        <!--设备实时监测-->
        <android.support.v7.widget.CardView
            android:id="@+id/layout_device"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:orientation="vertical"
                android:padding="12dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Antina的小觅"
                        android:textColor="@color/font_475669"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/img_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="切换设备"
                        android:textColor="@color/colortheme"
                        android:textSize="12sp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_C3C5CA"/>

                </RelativeLayout>


                <com.vondear.rxtools.view.layout.RxRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    app:background_normal="@color/colortheme"
                    app:corner_radius="6dp">


                </com.vondear.rxtools.view.layout.RxRelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:text="实时监测数据"
            android:textColor="@color/font_475669"
            android:textSize="19sp"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">


            <com.wesmartclothing.tbra.view.TimingMonitorView
                android:id="@+id/timingMonitorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.wesmartclothing.tbra.view.TimingMonitorView>


        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>