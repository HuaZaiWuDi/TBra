<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mine.SettingActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardElevation="6dp">

        <com.vondear.rxtools.view.RxTitle
            android:id="@+id/rxTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:translationZ="2dp"
            app:leftIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="设置"
            app:titleColor="@color/line_333845"
            app:titleSize="16sp"/>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:contentPadding="14dp">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="账号管理"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/ic_arrow_left_write"
            android:tint="#C2C4CA"
            />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/layout_resetPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:contentPadding="14dp">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="修改密码"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/ic_arrow_left_write"
            android:tint="#C2C4CA"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/layout_clearCache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:contentPadding="14dp">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="清除缓存"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="12.3M"
            android:textColor="@color/font_475669"
            android:textSize="14sp"
            />


    </android.support.v7.widget.CardView>


    <com.vondear.rxtools.view.layout.RxTextView
        android:id="@+id/tv_logout"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:elevation="6dp"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:background_normal="@color/colortheme"
        app:corner_radius="24dp"
        app:ripple_color="@color/ripple_ECEAE6"/>


</LinearLayout>