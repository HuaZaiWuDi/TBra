<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.mine.SettingActivity">


    <com.vondear.rxtools.view.cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        >

        <com.vondear.rxtools.view.RxTitle
            android:id="@+id/rxTitle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            app:leftIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="设置"
            app:titleColor="@color/line_333845"
            app:titleSize="16sp"/>


    </com.vondear.rxtools.view.cardview.CardView>


    <com.vondear.rxtools.view.cardview.CardView
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        app:contentPadding="6dp">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_man"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:text="账号管理"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/ic_arrow_left_write"
            android:tint="#C2C4CA"
            />


    </com.vondear.rxtools.view.cardview.CardView>


    <com.vondear.rxtools.view.cardview.CardView
        android:id="@+id/layout_resetPwd"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        app:contentPadding="6dp"
        >


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_key"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:text="修改密码"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/ic_arrow_left_write"
            android:tint="#C2C4CA"
            />


    </com.vondear.rxtools.view.cardview.CardView>

    <com.vondear.rxtools.view.cardview.CardView
        android:id="@+id/layout_clearCache"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardShadowColorEnd="#006A6F7B"
        app:cardShadowColorStart="#1A6A6F7B"
        app:contentPadding="6dp">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_broom"/>


        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:text="清除缓存"
            android:textColor="@color/font_475669"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/font_475669"
            android:textSize="14sp"
            tools:text="12.3M"
            />


    </com.vondear.rxtools.view.cardview.CardView>


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@mipmap/ic_btn"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="14sp"
        />


</LinearLayout>